<script>
    function validation()
    {
        var v = /^[a-zA-Z ]+$/
        if(form1.txtname.value=="")
        {
            alert("Please Enter Department Name");
            form1.txtname.focus();
            return false;
        }
        else{
            if(!v.test(form1.txtname.value))
            {
                alert("Please Enter Only Alphabets in your  Department Name");
                form1.txtname.focus();
                return false;
            }
        }
    }
</script>
<section id="inner-headline">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="pageTitle">MANAGE DEPARTMENT</h2>
			</div>
		</div>
	</div>
	</section>
	<section id="content">
	
	<div class="container">
	<div class="row">
								<div class="col-md-6">
									
									<div class="contact-form">
											
		<form method="post"  id="contactform" class="contact" action="/add_dept" name="form1">
											
											<div class="form-group has-feedback">
												<label for="email">Department Name</label>
												<input type="text" class="form-control" name="txtname" placeholder="Enter Department Name">
												
											</div>
											
											
											<input type="submit" value="SAVE" name="btnsave" class="submit btn btn-default" onClick="return validation();">
										</form>
										 
										
									</div>
								</div>
								<div class="col-md-6">
									<% if(items.length > 0){ %>
											<table class="table table-bordered">
												<tr>
													<th>DEPARTMENT ID</th>
													<th>DEPARTMENT NAME</th>
													<th>DEPARTMENT STATUS</th>
													<th>EDIT</th>
													<th>ACTIVE / DISABLED</th>
												</tr>
											<% for(var i=0;i<items.length ; i++){ %>
														<tr>
															<td><%= items[i].dep_id %></td>
															<td><%= items[i].dep_name %></td>
															<% if(items[i].dep_status=="0"){ %>
																<td style="color: green;">ACTIVE</td>
																<td><a class="btn btn-primary" style="background-color: lightblue;" href="/principal_edit_dep/<%= items[i].dep_id %>">EDIT</a></td>
																<td><a href="/inactive_dept/<%= items[i].dep_id %>" class="btn btn-danger" style="background-color: red;"> INACTIVE</a></td>
															<% }else{ %>
																<td style="color: red;">INACTIVE</td>
																<td><a class="btn btn-primary" style="background-color: lightblue;" href="/principal_edit_dep/<%= items[i].dep_id %>">EDIT</a></td>
																<td><a href="/active_dept/<%= items[i].dep_id %>" class="btn btn-success" style="background-color: green;"> ACTIVE</a></td>
															<% } %>
															

														</tr>
												<% } %>
											</table>
									<% } %>
								</div>
							</div>
	</div>
 
	</section>
