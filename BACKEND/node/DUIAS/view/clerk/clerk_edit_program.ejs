<script>
    function validation()
    {
        var v = /^[a-zA-Z ]+$/
        if(form1.txtname.value=="")
        {
            alert("Please Enter Program Name");
            form1.txtname.focus();
            return false;
        }
        else{
            if(!v.test(form1.txtname.value))
            {
                alert("Please Enter Only Alphabets in your  Program Name");
                form1.txtname.focus();
                return false;
            }
        }

		if(form1.seldept.value=="0")
        {
            alert("Please Enter Department");
            form1.seldept.focus();
            return false;
        }
    }
</script>
<section id="inner-headline">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="pageTitle">EDIT PROGRAM</h2>
			</div>
		</div>
	</div>
	</section>
	<section id="content">
	
	<div class="container">
	<div class="row">
								<div class="col-md-6">
									
									<div class="contact-form">
											
		<form method="post"  id="contactform" class="contact" action="/update_program" name="form1">
											
											<div class="form-group has-feedback">
												<label for="email">Program Name</label>
												<input type="text" class="form-control" name="txtname" placeholder="Enter Program Name" value="<%= items[0].program_name %>">
											</div>
											
											<div class="form-group has-feedback">
												<label>Select Department</label>
		
												<select class="form-control" name="seldept">
													<option value="0">Select Department</option>
												<% for(var i=0;i<ditems.length;i++){ %>
														<option value="<%= ditems[i].dep_id %>" <% if(ditems[i].dep_id == items[0].dep_id) { %> selected="selected" <% } %>   ><%= ditems[i].dep_name %></option>
													<% } %>
												</select>
											</div>
											
											<input type="submit" value="EDIT" name="btnedit" class="submit btn btn-default" onClick="return validation();">
                                            <input type="hidden" value="<%= items[0].program_id %>" name="txtpid">
										</form>
										 
										
									</div>
								</div>
